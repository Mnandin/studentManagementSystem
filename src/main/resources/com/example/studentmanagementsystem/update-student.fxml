<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.studentmanagementsystem.UpdateStudentController">

    <Label text="Update Student Information" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Select Student" prefWidth="100"/>

        <ComboBox fx:id="studentComboBox" promptText="Select Student" prefWidth="200"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Name" prefWidth="100"/>
        <TextField fx:id="nameField" prefWidth="200"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="ID" prefWidth="100"/>
        <TextField fx:id="idField" prefWidth="200"/>
    </HBox>

    <Button text="Update Student" onAction="#updateStudent" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

</VBox>
