<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.collections.FXCollections?>
<?import javafx.collections.ObservableList?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox spacing="20" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.studentmanagementsystem.ViewStudentDetailsController">
    <Label text="View Student Details" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- TableView to display student details -->
    <TableView fx:id="studentTable" prefWidth="600">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="200" />
            <TableColumn fx:id="idColumn" text="ID" prefWidth="200" />
            <TableColumn fx:id="coursesAndGradesColumn" text="Courses" prefWidth="200" />
        </columns>
    </TableView>
</VBox>
