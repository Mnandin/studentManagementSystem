<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.studentmanagementsystem.AddStudentController">
    <Label text="Add New Student"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Name" prefWidth="70"/>
        <TextField fx:id="nameField" prefWidth="200"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="ID" prefWidth="70"/>
        <TextField fx:id="idField" prefWidth="200"/>
    </HBox>

    <Button text="Add Student" onAction="#addStudent"/>

</VBox>
